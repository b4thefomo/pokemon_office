{
  "name": "pokemon-office",
  "version": "1.0.0",
  "description": "Network presence visualizer with Pokemon-style characters",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch server/index.ts",
    "client": "vite client --host",
    "build": "vite build client",
    "scan:test": "tsx server/services/networkScanner.ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "easystarjs": "^0.4.4",
    "phaser": "^3.70.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}
